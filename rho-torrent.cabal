name:                RhoTorrent
version:             0.1.0.0
synopsis:            BitTorrent client
description:         BitTorrent client
homepage:            https://github.com/osa1/rho-torrent
license:             BSD3
license-file:        LICENSE
author:              AUTHORS
maintainer:          omeragacan@gmail.com
category:            Network
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

source-repository head
  type:     git
  location: https://github.com/osa1/rho-torrent.git

library
  exposed-modules:
    Rho.Metainfo
    Rho.Tracker

  build-depends:
      base >=4.5 && <5
    , QuickCheck == 2.*
    , attoparsec
    , bencoding
    , binary
    , bytestring
    , http-client
    , network
    , quickcheck-instances

  hs-source-dirs:      src
  ghc-options:         -Wall
  default-language:    Haskell2010

executable rho
  hs-source-dirs: exec
  main-is: Main.hs
  ghc-options:         -Wall
  default-language:    Haskell2010

  build-depends:
      base >=4.5 && <5
    , RhoTorrent
    , bytestring

test-suite test
  type:             exitcode-stdio-1.0
  default-language: Haskell2010
  main-is:          Spec.hs
  hs-source-dirs:   test
  ghc-options:      -Wall

  other-modules:
    Rho.MetainfoSpec

  build-depends:
      base
    , HUnit
    , QuickCheck == 2.*
    , RhoTorrent
    , bencoding
    , binary
    , bytestring
    , data-default
    , directory
    , filepath
    , hspec
    , http-client
    , quickcheck-instances

test-suite doctests
  type:             exitcode-stdio-1.0
  ghc-options:      -threaded
  hs-source-dirs:   doctest
  main-is:          Doctest.hs
  build-depends:
      base
    , doctest >= 0.8

benchmark bench
  type:             exitcode-stdio-1.0
  default-language: Haskell2010
  main-is:          Bench.hs
  hs-source-dirs:   bench
  ghc-options:      -Wall

  build-depends:
      base >=4.5 && <5
    , RhoTorrent
    , criterion
    , random
